{
  "version": "0.2.0",
  "configurations": [
    {
      // Run Streamlit directly (best for most cases)
      "name": "Streamlit: Run app",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "args": ["run", "streamlit_app.py", "--server.headless=true"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      // Run a single fileâ€”useful to debug modules outside Streamlit loop
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
